@{
    Layout = "_Layout";  // This assumes you have a layout file; adjust if necessary
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Database Management - Second Harvest Northland Grants Management System</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <header>
        <h1>Database Management</h1>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                <li><a href="@Url.Action("Index", "UserManagement")">User Management</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section id="grantee-data">
            <h2>Grantee Data</h2>
            <table>
                <thead>
                    <tr>
                        <th>Grantee Name</th>
                        <th>Contact Info</th>
                        <th>Grant History</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grantee in Model.Grantees)
                    {
                        <tr>
                            <td>@grantee.Name</td>
                            <td>@grantee.ContactInfo</td>
                            <td><a href="@Url.Action("ViewHistory", "Grant", new { granteeId = grantee.Id })">View History</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

        <section id="grant-data">
            <h2>Grant Data</h2>
            <table>
                <thead>
                    <tr>
                        <th>Grant Title</th>
                        <th>Status</th>
                        <th>Date Submitted</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grant in Model.Grants)
                    {
                        <tr>
                            <td>@grant.Title</td>
                            <td>@grant.Status</td>
                            <td>@grant.DateSubmitted.ToString("MM/dd/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

        <section id="data-tools">
            <h2>Data Integrity Tools</h2>
            <button onclick="checkForDuplicates()">Check for Duplicates</button>
            <button onclick="exportData()">Export Data</button>
            <button onclick="archiveOldData()">Archive Old Data</button>
        </section>

        <section id="add-grantee">
            <h2>Add New Grantee</h2>
            <form method="post" asp-action="AddGrantee">
                <label for="grantee-name">Grantee Name:</label>
                <input type="text" id="grantee-name" name="GranteeName" required>
                
                <label for="contact-info">Contact Info:</label>
                <input type="email" id="contact-info" name="ContactInfo" required>

                <button type="submit">Add Grantee</button>
            </form>
        </section>
    </main>

    <footer>
        <p>&copy; 2024 Second Harvest Northland</p>
    </footer>

    <script>
        async function fetchGrants() {
            const response = await fetch('/api/grants');
            const grants = await response.json();
            const grantTableBody = document.querySelector('#grant-data tbody');

            grants.forEach(grant => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${grant.title}</td>
                    <td>${grant.status}</td>
                    <td>${new Date(grant.dateSubmitted).toLocaleDateString()}</td>
                `;
                grantTableBody.appendChild(row);
            });
        }

        function checkForDuplicates() {
            alert('Duplicate check feature is not implemented yet.');
        }

        function exportData() {
            alert('Export data feature is not implemented yet.');
        }

        function archiveOldData() {
            alert('Archive old data feature is not implemented yet.');
        }

        document.addEventListener('DOMContentLoaded', fetchGrants);
    </script>
</body>
</html>
